<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chiefcorlyns.scenes.SecondFragment"
    android:onClick="onButtonClick">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SecondPage"
        android:id="@+id/button"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/forward1"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/save_route"
        android:id="@+id/imageView6"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/left1"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView7" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/right1"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/reverse1"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignParentStart="true" />


</RelativeLayout>
