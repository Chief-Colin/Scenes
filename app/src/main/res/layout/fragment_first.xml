<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chiefcorlyns.scene.FirstFragment">

    <include layout="@layout/content_paired_devices"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#ad0404"
        android:layout_alignBottom="@+id/btBluetooth"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/car1"
        android:layout_alignStart="@+id/btBluetooth" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connect Bluetooth"
        android:id="@+id/btBluetooth"
        android:background="#212121"
        android:textColor="#930906"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/car1"
        android:id="@+id/car1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!-- TODO: Update blank fragment layout -->


</RelativeLayout>
